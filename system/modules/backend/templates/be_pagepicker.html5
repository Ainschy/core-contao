<script>
window.addEvent('domready', function() {
  $('search').addEvent('keyup', function() {
    var key = $('search').getElement('input').value.toLowerCase();
    $('tl_listing').getElements('li').each(function(el) {
      if (!el.hasClass('tl_file')) return;
      el.setStyle('display', (el.getElement('div.tl_left').get('text').toLowerCase().match(key) ? 'block' : 'none'));
    });
  });
});
